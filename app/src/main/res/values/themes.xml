<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>   <!--меню-->
        <item name="colorPrimaryVariant">@color/black_color</item>
        <item name="colorOnPrimary">@color/black_super</item>   <!--текст-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="textInputStyle">@style/CustomTextInputStyle</item>
    </style>


    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidthFocused">0dp</item> <!-- Убираем ширину рамки при фокусе -->
        <item name="hintTextColor">@color/black</item> <!-- Цвет подсказки -->
    </style>
</resources>
