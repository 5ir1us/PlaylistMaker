<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>   <!--меню-->
        <item name="colorPrimaryVariant">@color/black_color</item>
        <item name="colorOnPrimary">@color/black_super</item>   <!--текст-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>



        <!-- Установите прозрачный или белый цвет для colorSecondary -->
        <item name="colorSecondary">@android:color/transparent</item>
        <item name="colorSecondaryVariant">@android:color/transparent</item>
        <item name="colorOnSecondary">@android:color/transparent</item>

        <!-- Уберите цвет обводки -->
        <item name="colorOutline">@android:color/transparent</item>

        <!-- Прочие атрибуты -->
        <item name="android:statusBarColor">?attr/background</item>
        <item name="elevationOverlayEnabled">false</item>





        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
      </style>


</resources>
