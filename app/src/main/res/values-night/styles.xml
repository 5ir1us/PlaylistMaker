<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>
    <!--    главный экран-->
    <style name="ActivityMainScreen" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconTint">@color/black_color</item>
        <item name="iconPadding">@dimen/icon_range</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/indent</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!--     тумблер -->
    <style name="ActivitySettingsStyleSwitch">
        <item name="android:paddingStart">@dimen/indent</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="trackTint">@color/text_gray</item>
        <item name="thumbTint">@color/blue</item>
        <item name="android:textFontWeight">400</item>

    </style>
    <!--настройки пункты -->
    <style name="ActivitySettingsStyle" parent="ActivitySettingsStyleSwitch">
        <item name="android:layout_marginTop">@dimen/line_indent_settings</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:drawableTint">@color/white_color</item>

    </style>
    <!--титульный настроек-->
    <style name="ActivityToolbar">
        <item name="android:textSize">@dimen/toolbar_size</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:tint">@color/white_color</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:padding">@dimen/padding_12</item>
    </style>
</resources>