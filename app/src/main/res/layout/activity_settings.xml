<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lily"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/indent"
        android:paddingEnd="@dimen/indent">

        <ImageView
            android:id="@+id/sittingBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/settings_return" />


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_end_setting"
            android:text="@string/sitting"
            android:textColor="@color/blackness"
            android:textSize="@dimen/text_size">

        </TextView>
    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swichDarckTheam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:paddingStart="@dimen/indent"
        android:paddingEnd="@dimen/padding_end_setting"
        android:text="@string/darkTheme"
        android:textColor="@color/blackness"
        android:textSize="@dimen/text_size_settings"
        android:thumbTint="@color/settings_image_color"
        android:trackTint="@color/track_gray">

    </androidx.appcompat.widget.SwitchCompat>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_indent_settings"
        android:clickable="true"
        android:drawableTint="@color/settings_image_color"
        android:paddingStart="@dimen/indent"
        android:paddingEnd="@dimen/padding_end_setting"
        android:text="@string/shareApp"
        android:textColor="@color/settings_text_color"
        android:textSize="@dimen/text_size_settings"
        app:drawableEndCompat="@drawable/settings_share" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_indent_settings"
        android:clickable="true"
        android:paddingStart="@dimen/indent"
        android:paddingEnd="@dimen/padding_end_setting"
        android:text="@string/shareApp"
        android:textColor="@color/settings_text_color"
        android:textSize="@dimen/text_size_settings"
        app:drawableEndCompat="@drawable/settings_support"
        app:drawableTint="@color/settings_image_color" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/terms_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_indent_settings"
        android:clickable="true"
        android:drawableTint="@color/settings_image_color"
        android:paddingStart="@dimen/indent"
        android:paddingEnd="@dimen/padding_end_setting"
        android:text="@string/termsOfUse"
        android:textColor="@color/settings_text_color"
        android:textSize="@dimen/text_size_settings"
        app:drawableEndCompat="@drawable/settings_arrow_forward" />

</LinearLayout>

