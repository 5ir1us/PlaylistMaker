<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/new_playlist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent_24"
        android:clickable="true"
        android:contentDescription=" "
        android:src="@drawable/button_new_playlist"

        />

    <ImageView
        android:id="@+id/empty_favorite_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:contentDescription=" "
        android:src="@drawable/no_results" />

    <TextView
        android:id="@+id/empty_favorite_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/uncreated_playlist"
        android:textColor="@color/black_revers"
        android:textSize="@dimen/text_size_19" />

    <TextView
        android:id="@+id/empty_favorite_text2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/uncreated_playlist2"
        android:textColor="@color/black_revers"
        android:textSize="@dimen/text_size_19" />


</LinearLayout>