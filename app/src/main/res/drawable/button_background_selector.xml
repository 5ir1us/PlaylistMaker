<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Активное состояние (синий) -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#3772E7" /> <!-- Синий цвет, если кнопка активна -->
            <corners android:radius="8dp" /> <!-- Закругленные углы (если нужно) -->
        </shape>
    </item>

    <!-- Неактивное состояние (серый) -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#AEAFB4" /> <!-- Серый цвет, если кнопка неактивна -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>